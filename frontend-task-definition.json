{
  "family": "mivent-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "128",
  "memory": "256",
  "containerDefinitions": [
    {
      "name": "mivent-frontend",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/mivent-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "REACT_APP_API_URL",
          "value": "https://api.mivent.com"
        }
      ],
      "secrets": [
        {
          "name": "REACT_APP_FIREBASE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-api-key:REACT_APP_FIREBASE_API_KEY::"
        },
        {
          "name": "REACT_APP_FIREBASE_AUTH_DOMAIN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-auth-domain:REACT_APP_FIREBASE_AUTH_DOMAIN::"
        },
        {
          "name": "REACT_APP_FIREBASE_PROJECT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-project-id:REACT_APP_FIREBASE_PROJECT_ID::"
        },
        {
          "name": "REACT_APP_FIREBASE_STORAGE_BUCKET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-storage-bucket:REACT_APP_FIREBASE_STORAGE_BUCKET::"
        },
        {
          "name": "REACT_APP_FIREBASE_MESSAGING_SENDER_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-messaging-sender-id:REACT_APP_FIREBASE_MESSAGING_SENDER_ID::"
        },
        {
          "name": "REACT_APP_FIREBASE_APP_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:mivent/firebase-app-id:REACT_APP_FIREBASE_APP_ID::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mivent-frontend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000 || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 40
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "mivent"
    }
  ]
}
